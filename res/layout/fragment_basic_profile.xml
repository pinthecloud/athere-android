<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/basic_profile_frag_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android1:id="@+id/basic_profile_frag_start_button"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_centerHorizontal="true"
        android1:text="@string/start" />

    <LinearLayout
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_centerHorizontal="true"
        android1:layout_centerVertical="true"
        android1:gravity="center"
        android1:orientation="vertical" >

        <RadioGroup
            android1:id="@+id/basic_profile_frag_radio_gender"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:orientation="horizontal" >

            <RadioButton
                android1:id="@+id/basic_profile_frag_radio_man"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="@string/man" />

            <RadioButton
                android1:id="@+id/basic_profile_frag_radio_woman"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="@string/woman" />
        </RadioGroup>

        <DatePicker
            android1:id="@+id/basic_profile_frag_year_picker"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>