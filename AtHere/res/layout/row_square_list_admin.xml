<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/square_list_admin_height"
    android:background="@drawable/groundlist_premium_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/row_square_list_admin_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/square"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/row_square_list_admin_background"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/icon"
            android:src="@drawable/groundlist_premium_locked_ico" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/row_square_list_admin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/square_list_text"
                android:textSize="@dimen/font_large" />

            <TextView
                android:id="@+id/row_square_list_admin_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/square_list_text"
                android:textSize="@dimen/font_normal" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>