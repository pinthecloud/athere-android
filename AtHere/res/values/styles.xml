<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.    -->

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppRedActionBarTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/RedActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/actionbar_red_back_btn</item>
    </style>

    <style name="AppWhiteActionBarTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/WhiteActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/actionbar_white_back_btn</item>
    </style>

    <!-- ActionBar styles -->
    <style name="RedActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/action_bar_red_background</item>
        <item name="android:titleTextStyle">@style/WhiteActionBarTitleText</item>
    </style>

    <style name="WhiteActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/action_bar_white_background</item>
        <item name="android:titleTextStyle">@style/BlackActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="BlackActionBarTitleText" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="WhiteActionBarTitleText" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>