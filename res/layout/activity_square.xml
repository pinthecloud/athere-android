    android:id="@+id/square_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/square_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout>

    <fragment
        android:id="@+id/square_drawer_fragment"
        android:name="com.pinthecloud.athere.fragment.SquareDrawerFragment"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        tools:layout="@layout/fragment_square_drawer" />

</android.support.v4.widget.DrawerLayout>