<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/square_drawer_participant_list_height"
    android:background="@drawable/drawer_list_selector_bg"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingEnd="@dimen/square_drawer_participant_list_right_margin"
    android:paddingLeft="@dimen/square_drawer_participant_list_left_margin"
    android:paddingRight="@dimen/square_drawer_participant_list_right_margin"
    android:paddingStart="@dimen/square_drawer_participant_list_left_margin" >

    <LinearLayout
        android:id="@+id/drawer_user_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="start|center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/drawer_user_pro_pic"
            android:layout_width="@dimen/square_drawer_participant_list_profile_width"
            android:layout_height="@dimen/square_drawer_participant_list_profile_height"
            android:layout_marginEnd="@dimen/square_drawer_participant_list_profile_nick_margin"
            android:layout_marginRight="@dimen/square_drawer_participant_list_profile_nick_margin"
            android:contentDescription="@string/profile_image" />

        <TextView
            android:id="@+id/drawer_user_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/square_drawer_participant_list_nick_name_gender_margin"
            android:layout_marginRight="@dimen/square_drawer_participant_list_nick_name_gender_margin"
            android:ellipsize="end"
            android:maxWidth="@dimen/square_drawer_participant_list_nick_max_width"
            android:singleLine="true"
            android:textSize="@dimen/font_large" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/square_drawer_profile_company_num_height"
            android:background="@drawable/bg_sidebar_member"
            android:gravity="center" >

            <ImageView
                android:id="@+id/drawer_user_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/square_drawer_participant_list_gender_company_number_margin"
                android:layout_marginRight="@dimen/square_drawer_participant_list_gender_company_number_margin"
                android:contentDescription="@string/gender" />

            <TextView
                android:id="@+id/drawer_user_company_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/drawer_user_chupa_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/send_chupa"
        android:src="@drawable/sidebar_chupa" />

</RelativeLayout>