<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/square_list_admin_height"
    android:background="@drawable/list_white_selector_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/row_square_list_admin_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/row_square_list_admin_line"
        android:contentDescription="@string/square"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/row_square_list_admin_line"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/row_square_list_admin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/square_list_name_distance_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_large" />

        <TextView
            android:id="@+id/row_square_list_admin_distance"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/square_drawer_profile_company_num_height"
            android:background="@drawable/bg_groundlist_member_m"
            android:gravity="center"
            android:paddingEnd="@dimen/square_list_member_right_margin"
            android:paddingLeft="@dimen/square_list_member_left_margin"
            android:paddingRight="@dimen/square_list_member_right_margin"
            android:paddingStart="@dimen/square_list_member_left_margin"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>

    <View
        android:id="@+id/row_square_list_admin_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_line" />

</RelativeLayout>