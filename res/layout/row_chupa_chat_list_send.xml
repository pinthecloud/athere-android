<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_chupa_chat_list_send_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|right"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/chupa_chat_list_send_right_margin"
    android:paddingLeft="0dp"
    android:paddingRight="@dimen/chupa_chat_list_send_right_margin"
    android:paddingTop="@dimen/chupa_chat_list_send_top_margin"
    android:paddingBottom="@dimen/chupa_chat_list_send_bottom_margin" >

    <ProgressBar
        android:id="@+id/row_chupa_chat_list_send_progress_bar"
        android:layout_width="@dimen/chupa_chat_list_send_progress_width"
        android:layout_height="@dimen/chupa_chat_list_send_progress_height"
        android:layout_gravity="bottom"
        android:visibility="gone" />

    <TextView
        android:id="@+id/row_chupa_chat_list_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textColor="@color/light_gray"
        android:paddingRight="@dimen/chupa_chat_list_send_time_right_margin"
        android:paddingRight="0dp"
        android:paddingBottom="@dimen/chupa_chat_list_send_time_bottom_margin"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/row_chupa_chat_list_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chupa_sent"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_large" />

</LinearLayout>