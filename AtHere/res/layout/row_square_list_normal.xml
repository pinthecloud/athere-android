<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/row_square_list_normal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/groundlist_normal_bg"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/none"
            android:paddingLeft="@dimen/square_list_margin"
            android:paddingRight="@dimen/none"
            android:paddingStart="@dimen/square_list_margin"
            android:textColor="@color/square_list_text"
            android:textSize="@dimen/font_large" />
    </android.support.v7.widget.CardView>

</LinearLayout>