<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <ProgressBar
        android:id="@+id/basic_profile_frag_progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/basic_profile_wrapper_top_margin" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/basic_profile_logo_bottom_margin"
            android:contentDescription="@string/logo"
            android:src="@drawable/setup" />

        <EditText
            android:id="@+id/basic_profile_frag_nick_name_edit_text"
            android:layout_width="@dimen/basic_profile_nick_name_text_width"
            android:layout_height="@dimen/basic_profile_text_height"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/nick_name"
            android:inputType="text"
            android:maxLength="10"
            android:textSize="@dimen/font_large" />

        <EditText
            android:id="@+id/basic_profile_frag_birth_gender_text"
            android:layout_width="@dimen/basic_profile_birth_gender_text_width"
            android:layout_height="@dimen/basic_profile_text_height"
            android:ems="10"
            android:enabled="false"
            android:gravity="center"
            android:inputType="text"
            android:textSize="@dimen/font_large" />

        <ImageButton
            android:id="@+id/basic_profile_frag_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/basic_profile_complete_button_top_margin"
            android:background="@android:color/transparent"
            android:contentDescription="@android:string/ok"
            android:src="@drawable/ok_image_button_bg" />
    </LinearLayout>

</RelativeLayout>