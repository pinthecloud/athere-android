<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_chupa_chat_list_receive_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/chupa_chat_list_receive_left_margin"
    android:paddingTop="@dimen/chupa_chat_list_receive_top_margin"
    android:paddingBottom="@dimen/chupa_chat_list_receive_bottom_margin" >

    <TextView
        android:id="@+id/row_chupa_chat_list_receive_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_chupa_recieved"
        android:textSize="@dimen/font_large" />

    <TextView
        android:id="@+id/row_chupa_chat_list_receive_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textColor="@color/light_gray"
        android:paddingLeft="@dimen/chupa_chat_list_send_time_left_margin"
        android:paddingBottom="@dimen/chupa_chat_list_send_time_bottom_margin"
        android:textSize="@dimen/font_small" />

</LinearLayout>