<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_chupa_chat_list_send_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal"
    android:paddingRight="@dimen/chupa_chat_list_send_right_margin"
    android:paddingTop="@dimen/chupa_chat_list_send_top_margin" >

    <ProgressBar
        android:id="@+id/row_chupa_chat_list_send_progress_bar"
        android:layout_width="@dimen/chupa_chat_list_send_progress_width"
        android:layout_height="@dimen/chupa_chat_list_send_progress_height"
        android:layout_gravity="bottom"
        android:visibility="gone" />

    <TextView
        android:id="@+id/row_chupa_chat_list_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textSize="@dimen/font_medium" />

    <TextView
        android:id="@+id/row_chupa_chat_list_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chupa_sent"
        android:paddingLeft="@dimen/chupa_chat_list_send_message_left_margin"
        android:paddingRight="@dimen/chupa_chat_list_send_message_right_margin"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_large" />

</LinearLayout>