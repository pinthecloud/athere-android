<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/square_chupa_list_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/actionbar_logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/square_chupa_list_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FromWho" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/square_chupa_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="content" />

                <TextView
                    android:id="@+id/square_chupa_list_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="when" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
