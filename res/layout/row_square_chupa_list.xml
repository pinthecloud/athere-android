<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_square_chupa_list_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/square_chupa_list_height"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/square_chupa_list_profile_left_margin"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/square_chupa_list_profile_left_margin" >

        <com.pinthecloud.athere.view.AhImageView
            android:id="@+id/square_chupa_list_profile_pic"
            android:layout_width="@dimen/square_chupa_list_profile_width"
            android:layout_height="@dimen/square_chupa_list_profile_height"
            android:layout_centerVertical="true"
            android:contentDescription="@string/profile_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/square_chupa_list_profile_text_margin"
            android:layout_marginStart="@dimen/square_chupa_list_profile_text_margin"
            android:layout_toEndOf="@+id/square_chupa_list_profile_pic"
            android:layout_toRightOf="@+id/square_chupa_list_profile_pic"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/square_chupa_list_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/square_chupa_list_content_margin"
                android:singleLine="true"
                android:textSize="@dimen/font_large" />

            <TextView
                android:id="@+id/square_chupa_list_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/square_chat_list_receive_content_left_margin"
                android:layout_marginStart="@dimen/square_chat_list_receive_content_left_margin"
                android:textSize="@dimen/font_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/square_chupa_list_time_right_margin"
            android:layout_marginRight="@dimen/square_chupa_list_time_right_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/square_chupa_list_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/square_chupa_list_content_margin"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/square_chupa_list_badge_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tabbar_badge"
                android:gravity="center"
                android:textColor="@color/dark_red"
                android:textSize="@dimen/font_medium"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/gray_line" />

</LinearLayout>