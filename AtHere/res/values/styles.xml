<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light"></style>

    <!-- Application theme -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">@dimen/none</item>
    </style>

    <style name="RedActionBarAppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/brand_red_color</item>
        <item name="colorPrimaryDark">@color/brand_red_color</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="WhiteActionBarAppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/brand_white_color</item>
        <item name="colorPrimaryDark">@color/brand_white_color</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

</resources>