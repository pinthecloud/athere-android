<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/square_chat_frag_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/square_chat_frag_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/square_chat_height"
        android:alpha="0.9"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/square_chat_chat_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_inputbar_highlight"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/square_chat_frag_message_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="@dimen/square_chat_message_left_margin"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textSize="@dimen/font_large" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <ImageButton
            android:id="@+id/square_chat_frag_send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/send"
            android:enabled="false"
            android:src="@drawable/send_image_button_bg" />
    </LinearLayout>

</LinearLayout>