<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/drawer_user_pro_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/actionbar_logo" />

    <TextView
        android:id="@+id/drawer_user_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pretty Girl"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/drawer_user_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/drawer_user_company_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 people"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/drawer_user_is_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingRight="10dp" />

</LinearLayout>
