<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="RedActionBarAppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/brand_red_color</item>
        <item name="colorPrimaryDark">@color/brand_red_color</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="WhiteActionBarAppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/brand_white_color</item>
        <item name="colorPrimaryDark">@color/brand_white_color</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

</resources>