<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <FrameLayout
        android:id="@+id/profile_settings_frag_camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.pinthecloud.athere.view.SquareImageView
                android:id="@+id/profile_settings_frag_profile_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/profile_image" />

            <ImageButton
                android:id="@+id/profile_settings_frag_profile_picture_select_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/profile_settings_frag_profile_picture"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/square_profile_camera_button_bottom_margin"
                android:background="@android:color/transparent"
                android:contentDescription="@string/profile_image"
                android:src="@drawable/ground_profile_default_select"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/profile_settings_frag_self_camera_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/profile_settings_frag_profile_picture"
                android:layout_alignRight="@+id/profile_settings_frag_profile_picture"
                android:layout_alignTop="@+id/profile_settings_frag_profile_picture"
                android:background="@android:color/transparent"
                android:contentDescription="@string/rotate"
                android:src="@drawable/camera_rotate"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/profile_settings_frag_camera_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/profile_settings_frag_profile_picture"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/profile_settings_camera_button_bottom_margin"
                android:background="@android:color/transparent"
                android:contentDescription="@string/take"
                android:src="@drawable/camera_take"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/profile_settings_frag_progress_bar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/profile_settings_frag_profile_info_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/profile_settings_frag_nick_name_text"
                android:layout_width="@dimen/profile_settings_text_width"
                android:layout_height="@dimen/profile_settings_text_height"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/nick_name"
                android:inputType="text"
                android:maxLength="10"
                android:textSize="@dimen/font_large" >
            </EditText>

            <EditText
                android:id="@+id/profile_settings_frag_company_text"
                android:layout_width="@dimen/profile_settings_text_width"
                android:layout_height="@dimen/profile_settings_text_height"
                android:layout_marginBottom="@dimen/profile_settings_company_number_start_button_margin"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/number_of_member_question"
                android:textSize="@dimen/font_large" />

            <ImageButton
                android:id="@+id/profile_settings_frag_start_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@android:string/ok"
                android:src="@drawable/ok_image_button_bg" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>