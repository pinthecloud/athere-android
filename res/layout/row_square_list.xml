<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_square_list_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/square_list_height"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/row_square_list_line"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/row_square_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/square_list_name_member_margin"
            android:textSize="@dimen/font_large" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/row_square_list_male_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/square_list_member_margin"
                android:background="@drawable/bg_groundlist_member_m"
                android:drawableLeft="@drawable/peoplenum"
                android:gravity="center"
                android:paddingLeft="@dimen/square_list_member_left_margin"
                android:paddingRight="@dimen/square_list_member_right_margin"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/row_square_list_female_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_groundlist_member_w"
                android:drawableLeft="@drawable/peoplenum"
                android:gravity="center"
                android:paddingLeft="@dimen/square_list_member_left_margin"
                android:paddingRight="@dimen/square_list_member_right_margin"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/row_square_list_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_line" />

</RelativeLayout>