<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccc"
    android:orientation="vertical"
    tools:context="com.pinthecloud.athere.fragment.SquareListMenuDrawerFragment" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/square_list_menu_drawer_frag_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/des_profile_image"
            android:src="@drawable/profile_default_image" />

        <TextView
            android:id="@+id/square_list_menu_drawer_frag_nick_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </GridLayout>

    <ListView
        android:id="@+id/square_list_menu_drawer_frag_setting_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
</ListView>

</LinearLayout>