<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/chupa_chat_other_bar_height"
        android:background="@android:color/white"
        android:gravity="start|center"
        android:orientation="horizontal"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/chupa_chat_other_bar_left_margin"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/chupa_chat_other_bar_left_margin" >

        <com.pinthecloud.athere.view.CircleImageView
            android:id="@+id/chupa_chat_frag_other_profile"
            android:layout_width="@dimen/chupa_chat_other_profile_width"
            android:layout_height="@dimen/chupa_chat_other_profile_height"
            android:layout_marginEnd="@dimen/chupa_chat_other_profile_nick_margin"
            android:layout_marginRight="@dimen/chupa_chat_other_profile_nick_margin"
            app:civBorderColor="@color/gray_line"
            app:civBorderWidth="@dimen/line_width" />

        <TextView
            android:id="@+id/chupa_chat_frag_other_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/chupa_chat_other_nick_name_gender_margin"
            android:layout_marginRight="@dimen/chupa_chat_other_nick_name_gender_margin"
            android:textSize="@dimen/font_large" />

        <TextView
            android:id="@+id/chupa_chat_frag_other_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/age_gender_margin"
            android:layout_marginRight="@dimen/age_gender_margin"
            android:textSize="@dimen/font_medium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/chupa_chat_profile_company_num_height"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/chupa_chat_frag_other_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/chupa_chat_other_gender_company_number_margin"
                android:layout_marginRight="@dimen/chupa_chat_other_gender_company_number_margin"
                android:contentDescription="@string/gender" />

            <TextView
                android:id="@+id/chupa_chat_frag_other_company_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_medium" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_gravity="center"
        android:background="@color/gray_line" />

    <ListView
        android:id="@+id/chupa_chat_frag_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/chat_list_bg"
        android:divider="@null"
        android:transcriptMode="alwaysScroll" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/square_chat_inputbar_background"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/chat_inputbar_margin"
        android:paddingEnd="@dimen/none"
        android:paddingLeft="@dimen/chat_inputbar_margin"
        android:paddingRight="@dimen/none"
        android:paddingStart="@dimen/chat_inputbar_margin"
        android:paddingTop="@dimen/chat_inputbar_margin" >

        <EditText
            android:id="@+id/chupa_chat_frag_message_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/general_text_input_bg"
            android:ems="10"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:paddingEnd="@dimen/chat_inputbar_margin"
            android:paddingLeft="@dimen/chat_inputbar_margin"
            android:paddingRight="@dimen/chat_inputbar_margin"
            android:paddingStart="@dimen/chat_inputbar_margin"
            android:textColor="@color/square_chat_text"
            android:textSize="@dimen/font_large" >

            <requestFocus />
        </EditText>

        <ImageButton
            android:id="@+id/chupa_chat_frag_send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/transparent"
            android:contentDescription="@string/send"
            android:src="@drawable/send_image_button_bg" />
    </LinearLayout>

</LinearLayout>