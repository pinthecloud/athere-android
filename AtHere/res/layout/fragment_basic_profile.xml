<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <ProgressBar
        android:id="@+id/basic_profile_frag_progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingEnd="@dimen/basic_profile_profile_right_margin"
        android:paddingLeft="@dimen/basic_profile_profile_left_margin"
        android:paddingRight="@dimen/basic_profile_profile_right_margin"
        android:paddingStart="@dimen/basic_profile_profile_left_margin" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_profile"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_large" />

        <com.pinthecloud.athere.view.CircleImageView
            android:id="@+id/basic_profile_frag_profile_image"
            android:layout_width="@dimen/basic_profile_profile_image_width"
            android:layout_height="@dimen/basic_profile_profile_image_height"
            android:src="@drawable/bg_ground_profile_default"
            app:civBorderColor="@color/basic_profile_gray"
            app:civBorderWidth="@dimen/line_height" />

        <TextView
            android:id="@+id/basic_profile_frag_nick_name_warning_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/basic_profile_warning"
            android:textSize="@dimen/font_medium" />

        <EditText
            android:id="@+id/basic_profile_frag_nick_name_text"
            android:layout_width="@dimen/basic_profile_nick_name_text_width"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/enter_nick_name_message"
            android:inputType="text"
            android:maxLength="10"
            android:textColor="@android:color/white"
            android:textColorHint="@color/basic_profile_gray"
            android:textSize="@dimen/font_medium" />

        <TextView
            android:id="@+id/basic_profile_frag_birth_gender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_medium" />

        <ImageButton
            android:id="@+id/basic_profile_frag_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@android:string/ok"
            android:src="@drawable/ok_image_button_bg" />
    </LinearLayout>

</RelativeLayout>