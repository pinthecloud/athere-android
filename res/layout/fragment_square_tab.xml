<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/square_tab_frag_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_divider_height"
        android:background="@color/line" />

    <com.pinthecloud.athere.interfaces.PagerSlidingTabStrip
        android:id="@+id/square_tab_frag_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        app:pstsActivateTextColor="@android:color/white"
        app:pstsDeactivateTextColor="@color/tab_text_unselected"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorColor="@color/red"
        app:pstsIndicatorHeight="@dimen/tab_height"
        app:pstsShouldExpand="true"
        app:pstsTabSwitch="true"
        app:pstsTextAllCaps="false" />

    <android.support.v4.view.ViewPager
        android:id="@+id/square_tab_frag_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/square_tab_frag_tab" />

</RelativeLayout>